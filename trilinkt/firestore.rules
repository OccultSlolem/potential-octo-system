rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
    	function isUser(targetId) {
      	return request.auth != null && request.auth.uid == targetId 
      }
    	match /merchants/{merchant} {
        allow read, write: if isUser(merchant)
      }
    }
  }
}